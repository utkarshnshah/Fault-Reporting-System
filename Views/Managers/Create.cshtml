@model FaultReportingSystem.Models.Manager

@{
    ViewData["Title"] = "Add New Manager";
}
<h1>Add New Manager</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ManagerFirstName" class="control-label"></label>
                <input asp-for="ManagerFirstName" class="form-control" required="required"/>
                <span asp-validation-for="ManagerFirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ManagerLastName" class="control-label"></label>
                <input asp-for="ManagerLastName" class="form-control" required="required" />
                <span asp-validation-for="ManagerLastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ManagerEmail" class="control-label"></label>
                <input asp-for="ManagerEmail" class="form-control" type="email" required="required" />
                <span asp-validation-for="ManagerEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ManagerPassword" class="control-label"></label>
                <input asp-for="ManagerPassword" class="form-control" type="password" required="required" />
                <span asp-validation-for="ManagerPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ManagerContactNumber" class="control-label"></label>
                <input asp-for="ManagerContactNumber" class="form-control" type="tel"/>
                <span asp-validation-for="ManagerContactNumber" class="text-danger"></span>
            </div><br/>
            <div class="form-group">
                <input type="submit" value="Add New" class="btn btn-outline-primary" />
                <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
