@model FaultReportingSystem.Models.FaultLog

@{
    ViewData["Title"] = "Add Fault Log";
}
<h1>Add Fault Log</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DateTime" class="control-label"></label>
                <input asp-for="DateTime" class="form-control" />
                <span asp-validation-for="DateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Action" class="control-label"></label>
                <input asp-for="Action" class="form-control" />
                <span asp-validation-for="Action" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeveloperId" class="control-label"></label>
                <select asp-for="DeveloperId" class="form-control form-select" asp-items="ViewBag.Developers"></select>
                <span asp-validation-for="DeveloperId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FaultId" class="control-label">Fault Id</label>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon1"><strong class="fs-6">F-</strong></span>
                    <select asp-for="FaultId" class="form-control form-select" asp-items="ViewBag.FaultId"></select>
                </div>
            </div><br />
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-outline-primary" />
                <a asp-action="ViewFaultLogs" asp-route-faultId="@ViewData["SelectedFaultId"]" class="btn btn-outline-secondary">Back To Fault Logs</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
