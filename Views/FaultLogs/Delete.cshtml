@model FaultReportingSystem.Models.FaultLog

@{
    ViewData["Title"] = "Delete Fault Log";
}
<h1>Delete Fault Log</h1>

<h3>Are you sure you want to delete this Fault Log?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Action)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Action)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Developer)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Developer.DeveloperFullNameWithEmail)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Fault)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fault.Problem)
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="LogId" />
        <input type="submit" value="Delete" class="btn btn-outline-danger" />
        <a asp-controller="FaultLogs" asp-action="ViewFaultLogs" asp-route-faultId="@Model.FaultId" class="btn btn-outline-secondary">Back To Fault Logs</a>
    </form>
</div>
