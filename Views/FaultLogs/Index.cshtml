@model IEnumerable<FaultReportingSystem.Models.FaultLog>

@{
    ViewData["Title"] = "Fault Logs";
}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>All Fault Logs</h1>
</div><hr />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LogId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FaultId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Action)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Developer)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    Log @Html.DisplayFor(modelItem => item.LogId)
                </td>
                <td>
                    F-@Html.DisplayFor(modelItem => item.Fault.FaultId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Action)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Developer.DeveloperFullNameWithEmail)
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-outline-primary" asp-route-id="@item.LogId">Edit</a>
                    <a asp-action="Delete" class="btn btn-outline-danger" asp-route-id="@item.LogId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
