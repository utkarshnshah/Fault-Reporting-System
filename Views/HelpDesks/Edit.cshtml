@model FaultReportingSystem.Models.HelpDesk

@{
    ViewData["Title"] = "Edit";
}
<h1>Edit New Help Desk Staff</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="HelpDeskId" />
            <div class="form-group">
                <label asp-for="HelpDeskFirstName" class="control-label"></label>
                <input asp-for="HelpDeskFirstName" class="form-control" required="required" />
                <span asp-validation-for="HelpDeskFirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HelpDeskLastName" class="control-label"></label>
                <input asp-for="HelpDeskLastName" class="form-control" required="required" />
                <span asp-validation-for="HelpDeskLastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HelpDeskEmail" class="control-label"></label>
                <input asp-for="HelpDeskEmail" class="form-control" type="email" required="required" />
                <span asp-validation-for="HelpDeskEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HelpDeskPassword" class="control-label"></label>
                <input asp-for="HelpDeskPassword" class="form-control" type="password" required="required" />
                <span asp-validation-for="HelpDeskPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HelpDeskContactNumber" class="control-label"></label>
                <input asp-for="HelpDeskContactNumber" class="form-control" type="tel" />
                <span asp-validation-for="HelpDeskContactNumber" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-outline-primary" />
                <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
