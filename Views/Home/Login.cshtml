@model FaultReportingSystem.Models.Customer
@{
    ViewData["Title"] = "Login";
    var LoginErrorMessage = TempData["LoginErrorMessage"] as string;
}

<div class="row">
    <div class="col-md-8">
        <div class="card mb-4">
            <div class="card-body d-flex flex-column">
                <h3 class="card-title mb-4">Introduction to FRS - Fault Reporting System</h3>
                <p class="lead text-justify">Kiwi Software Group presents Fault Reporting System (FRS), a powerful web tool that is intended to improve and simplify the process of managing and reporting faults across our software business. This system, which is creatively and precisely developed, is an essential resource for our esteemed clients as well as internal groups such as managers, help desk employees, developers, and system administrators.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h3 class="text-center">Customer Login</h3>
                <hr />
                @if (!string.IsNullOrEmpty(LoginErrorMessage))
                {
                    <div class="alert alert-danger alert-fade" role="alert">
                        @LoginErrorMessage
                    </div>
                }
                @using (Html.BeginForm("LoginCustomer", "Home", FormMethod.Post, new { @class = "needs-validation", novalidate = "true" }))
                {
                    <div class="form-group">
                        <label asp-for="CustomerEmail" class="control-label">Email</label>
                        <input asp-for="CustomerEmail" type="email" class="form-control" maxlength="250" />
                        <span asp-validation-for="CustomerEmail" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CustomerPassword" class="control-label">Password</label>
                        <input asp-for="CustomerPassword" type="password" class="form-control" maxlength="50" />
                        <span asp-validation-for="CustomerPassword" class="text-danger"></span>
                    </div>

                    <br />
                    <div class="form-group d-grid">
                        <button type="submit" class="btn btn-outline-primary">Login</button>
                    </div>
                    <p class="text-center mt-3">New User? <a href="@Url.Action("CustomerRegistration", "Home")">Click here to Register</a></p>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}