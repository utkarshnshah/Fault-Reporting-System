@model FaultReportingSystem.Models.Developer

@{
    ViewData["Title"] = "Add New Developer";
}

<h1>Add New Developer</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DeveloperFirstName" class="control-label"></label>
                <input asp-for="DeveloperFirstName" class="form-control" required="required" />
                <span asp-validation-for="DeveloperFirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeveloperLastName" class="control-label"></label>
                <input asp-for="DeveloperLastName" class="form-control" required="required" />
                <span asp-validation-for="DeveloperLastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeveloperEmail" class="control-label"></label>
                <input asp-for="DeveloperEmail" class="form-control" required="required" />
                <span asp-validation-for="DeveloperEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeveloperPassword" class="control-label"></label>
                <input asp-for="DeveloperPassword" class="form-control" type="password" required="required" />
                <span asp-validation-for="DeveloperPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeveloperContactNumber" class="control-label"></label>
                <input asp-for="DeveloperContactNumber" class="form-control" type="tel" />
                <span asp-validation-for="DeveloperContactNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ManagerId" class="control-label"></label>
                <select asp-for="ManagerId" class="form-control" asp-items="ViewBag.Managers" required="required">
                    <option value="Select Manager" selected>Select Manager</option>
                </select>
                <span asp-validation-for="ManagerId" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <input type="submit" value="Add New" class="btn btn-outline-primary" />
                <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
